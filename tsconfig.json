{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017"],
    "allowJs": false,
    "jsx": "react-native",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@model/*": ["src/model/*"],
      "@solver/*": ["src/solver/*"],
      "@validator/*": ["src/validator/*"],
      "@storage/*": ["src/storage/*"],
      "@samples/*": ["src/samples/*"]
    }
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["node_modules"]
}
